<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/red_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/circle_box_3r"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_search_info_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@mipmap/sousuo"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="搜索服务快速发布需求"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#bbbbbb" />

                <ImageView
                    android:id="@+id/img_qingkong_search_info_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/qingkong" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_cancle_search_info_activity"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <in.srain.cube.views.ptr.PtrClassicFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ptr_framelayout_serach_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ptr_duration_to_back_refresh="2000"
            app:ptr_pull_to_fresh="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search_info_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    </LinearLayout>

</LinearLayout>